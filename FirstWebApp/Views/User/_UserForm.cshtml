<p>
        <label asp-for="Username">Benutzername</label><br />
        <input type="text" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </p>
    <p>
        <label asp-for="Password">Passwort</label><br />
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </p>
    <p>
        <label asp-for="Birthdate">Geburtsdatum</label><br />
        <input type="date" asp-for="Birthdate" />
        <span asp-validation-for="Birthdate"></span>
    </p>
    <p>
        <label asp-for="EMail">Mail-Adresse</label><br />
        <input type="email" asp-for="EMail" />
        <span asp-validation-for="EMail"></span>
        <span id="Email-Double" style="display: none; color: red;">Die Email ist bereits vorhanden!</span>
    </p>
    <p>
        <label asp-for="Gender">Geschlecht</label><br />
        <select asp-for="Gender">
            <option value="2">nicht angegeben</option>
            <option value="0">männlich</option>
            <option value="1">weiblich</option>
        </select>
        <span asp-validation-for="Gender"></span>
    </p>

    <p>
        <input type="submit" value="absenden" />
        <input type="reset" value="abbrechen" />
    </p>